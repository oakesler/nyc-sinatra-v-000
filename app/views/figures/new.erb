<h2>Create New Figure</h2>

<form action="/figures" method="POST">
  <input type="text" name= "figure[name]" placeholder="Name:">
  <input type="submit" value="Submit">
</form>


  <p>Select an existing landmark or create a new one below.</p>
 
  <h3>Existing Landmarks</h3>
  <% @landmarks.each do |item| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%=item.id%>" value="<%=item.id %>"><%=item.name%></input><br>
  <% end %>
  <br>
 
  <h3>New Landmark</h3>
  <label>Landmark Name: </label>
  <br>
  <input type="text" name="landmark[name]" id="landmark_name"></input>
  <br><br>
 
  <input type="submit" value="Create Landmark">
</form>










