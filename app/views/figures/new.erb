<h2>Create New Figure</h2>

<form action="/figures" method="POST">
  <input type="text" name= "figure[name]" id="figure_name" placeholder="Name:">
  
  <p>Select an existing title or create a new one below.</p>

  <h3>Existing Titles </h3>
  <% @titles.each do |item| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=item.id%>" value="<%=item.id%>"><%=item.name%></input><br>
  <% end %>
  <br>
  <h3>New Title</h3>
  <label>Title: </label>
  <br>
  <input type="text" name="title[name]" id="new_title"></input>
  <br><br>
  <p>Select an existing landmark or create a new one below.</p>
  <h3>Existing Landmarks</h3>
  <% @landmarks.each do |item| %>
    <input type="radio" name="figure[landmark_ids][]" id="landmark_<%=item.id%>" value="<%=item.id%>"><%=item.name%></input><br>
  <% end %>
  <br>
 
 
  <h3>New Landmark</h3>
  <label>Name: </label>
  <br>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year"></input>
  <br><br>
  
  <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
